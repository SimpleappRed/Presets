<resources>
    <!-- Base application ic_theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your ic_theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/fontForAllTextInApp</item>
    </style>
    <style name="fontForAllTextInApp" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

</resources>