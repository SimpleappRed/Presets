<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />

            <ImageView
                android:id="@+id/item_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_for_touch_icon"
                android:padding="@dimen/margin_8"
                android:src="@drawable/ic_touch" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="@color/transparent_dark"
                android:orientation="horizontal"
                android:padding="4dp">


                <ImageView
                    android:id="@+id/item_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_8"
                    android:src="@drawable/favorite_border_white" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/margin_8"
                    android:text="fall 5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_18" />

                <TextView
                    android:id="@+id/item_dng_download"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_weight="1"
                    android:background="@drawable/shape_for_dng_textview"
                    android:gravity="center_vertical|center"
                    android:text="@string/dng"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_13" />
            </LinearLayout>


        </FrameLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
